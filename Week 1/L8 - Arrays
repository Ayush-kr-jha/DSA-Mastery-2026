int main(){
    int arr[6] = {5,15,22,1,-15,24};
    
    
    // calculating size of an array : 
    int size = (sizeof(arr)/sizeof(int));
    // Using .size()  function is not possible here as arr is a primitive array and not a class object.
    cout<<"Size of the array = "<<size<<"\n";
    
    // Running a for loop to print all elements of the array : 
    for(int i = 0; i< size; i++){
        cout<<arr[i]<< " ";
    }
    cout<<"\n";
    
    




        
    int smallest = INT_MAX;
    int largest = INT_MIN;
    int smallestIndex;
    int largestIndex ;

    // Least or Minimum Element from the array : 
    for(int i = 0; i< size; i++){
    /*  Approach 1 : Using if-conditon : 
    
        // For smallest element : 
        if (smallest > arr[i]){
            smallest = arr[i];
        }


        // For largest element : 

        if(largest<arr[i]){
            largest = arr[i];
        }
    */  
        
        // Approach 2 : Using min(a,b) & max(a,b) function : 
        smallest = min(smallest, arr[i]);
        largest = max(arr[i], largest);



        // Find Index of smallest and largest element : 
        if (smallest == arr[i]){
            smallestIndex = i;
        }

        if (largest == arr[i]){
            largestIndex = i;
        }
    }
    
    cout<<"Minimum Element : "<<smallest<<"\n";
    cout<<"Index of Minimum Element : "<<smallestIndex<<"\n";
    cout<<"Largest Element : "<<largest<<"\n";
    cout<<"Index of Largest Element : "<<largestIndex<<"\n";
    
    
    
    
    // Performing Linear Search on array nums : 
    int nums[] = {2,5,7,-2,20,32,203};
    int sz_nums = sizeof(nums)/sizeof(nums[0]);
    int target;
    cout<<"\nzArray Elements are : ";
    for(int i = 0; i<sz_nums; i++){
        cout<<nums[i]<<" ";
    }
    cout<<"\nEnter Target element = ";
    cin>>target;
    int res = linearSearch(nums, sz_nums, target);
    if(res == -1){
        cout<<"Element not found in the array\n";
    }
    else{
        cout<<"Element found at index = "<<res<<"\n";

    }

    
    
    
    // Reversing an array (2 pointer approach) :
    int nums1[] = {2,5,6,9,2,0,-1};
    int sz1 = sizeof(nums1)/sizeof(nums1[0]);
    cout<<"\nOriginal Array : ";
    for(int i = 0; i<sz1; i++){
        cout<<nums1[i]<< " ";
    }
    
    reverseArray(nums1, sz1);
    
    cout<<"\nReversed Array : ";
    for(int i = 0; i<sz1; i++){
        cout<<nums1[i]<< " ";
    }
    
    
    /*
    The 2 pointer apprpach : 
    nums = [2, 5, 6, 9, 2, 0, -1]
    indexes: 0  1  2  3  4  5  6
    
    start = 0 -> points to the
     first element 
    end = sz - 1 = 6 -> points to the last element
    
    Goal : swap nums[start] and nums[end] repeatedly until the array is reversed.
    
    Loop Conditon : 2 ways :
    
    1. while(start < = end) -> works but swaps middle element with itself
    2. while(start < end) -> preferred
    
    | Iteration | start | end | swap                               
    | --------- | ----- | --- | ------------------------------------- 
    | 1         | 0     | 6   | nums[0] ↔ nums[6] → -1 5 6 9 2 0 2 | 
    | 2         | 1     | 5   | nums[1] ↔ nums[5] → -1 0 6 9 2 5 2 |
    | 3         | 2     | 4   | nums[2] ↔ nums[4] → -1 0 2 9 6 5 2 |
    | 4         | 3     | 3   | loop ends (start = end)            |

    Once start == end, we're at the middle element. So, no swap is needed.
    
    
    */
    
    
    
    
    // Calculate sum and product of all numbers in an array : 
    int nums2[] = {2, 5, 6, 9, 2, -1};
    int sz2 = sizeof(nums2)/ sizeof(nums2[0]);
    pair<int,int> result = sumProd(nums2, sz2);
    cout<<"\n\nSum of elements of nums2 = "<<result.first<<"\nProduct of elements of nums2 = "<<result.second<<"\n"; 
    
    
    
    
    
    // Swapping Max and Min number of an array : 
    
    // nums2[] = {2, 5, 6, 9, 2, -1} ; 9 is the largest element at index 3, and -1 is the smallest element which is at index 5
    swapMaxMinarr(nums2, sz2);
    // After calling swapping function 9 comes at index 5 and smallest elent (-1) has substituted at  index 3.
    cout<<"After swapping Max and Min element of array : ";
    for(int i = 0; i < sz2; i++){
        cout<< nums2[i]<< " ";
    }
    cout<<"\n";
    
    
    
    
    
    
    // Print all unique values in an array
    int nums3[] = {2,1,2,1,3,4,2,1,2,4};
    int sz3 = sizeof(nums3)/sizeof(nums3[0]);
    //uniqueval(nums3, sz3);
    










   // Intersection of 2 arrays

    return 0;
}
