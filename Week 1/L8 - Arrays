#include <iostream>
#include <climits>
#include <utility>
using namespace std;


// Function for Linear Search - Time Comlexity : O(n) : linear complexity
int linearSearch(int nums[], int sz_nums, int target){
    for(int i = 0; i<sz_nums; i++){
        if (target == nums[i]){
            return i;    
        }
    }
    return -1;
}





// Function for reversing an array (2 pointer approach):
void reverseArray(int nums1[], int sz1){
    int start = 0, end = sz1-1;
    while(start < end){
        swap(nums1[start], nums1[end]);
        start++;
        end--;
    }
}







// Calculate sum and product of all numbers in an array : 


// pair is a Data structure which Holds Two Values, Heterogeneous/Homogeneous (e.g., a string and an integer). It treats the two elements as one single entity/unit. Access: accessed via specific names like .first and .second (C++)

pair<int,int> sumProd(int nums2[], int sz2){
    int sumOfnums2 = 0, prodOfnums2 = 1;
    for(int i = 0; i<sz2; i++){
        sumOfnums2 += nums2[i];
        prodOfnums2 *= nums2[i];
    }
    
    return {sumOfnums2, prodOfnums2};
}





// Funciton for Swapping Max and Min number of an array : 

void swapMaxMinarr(int nums2[], int sz2){
    int largest = INT_MIN;
    int indexLargest, indexSmallest;
    int smallest = INT_MAX;
    for(int i = 0; i<sz2; i++){
        if(largest < nums2[i]){
            largest = nums2[i];
        }

        // largest = max(largest, nums2[i]);  -> alternative approach using max() function

        if(largest == nums2[i]){
            indexLargest = i;
        }

        if(smallest > nums2[i]){
            smallest = nums2[i];
        }
        // smallest = min(smallest, nums2[i]);  -> alternative approach using min() function
        
        if(smallest == nums2[i]){
            indexSmallest = i;
        }
    }
    swap(nums2[indexSmallest],nums2[indexLargest]);
}




